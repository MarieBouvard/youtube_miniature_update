name: Test Replicate Simple

on:
  workflow_dispatch:   # Lancement manuel uniquement

permissions:
  contents: write

jobs:
  test-replicate:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Generate test image
        run: |
          echo "ðŸŽ¨ Test de gÃ©nÃ©ration Replicate avec prompt fixe..."
          python test_replicate.py
        env:
          REPLICATE_API_TOKEN: ${{ secrets.REPLICATE_API_TOKEN }}
